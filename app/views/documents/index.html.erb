<% title "Documentos" %>

<table>
  <tr>
    <th>Usuário</th>
    <th>Unidade</th>
    <th>Tipo</th>
    <th>Assunto</th>
    <th>Destinatário</th>
    <th>Número</th>
  </tr>
  <% for document in @documents %>
    <tr>
      <td><%= document.user.name %></td>
      <td><%= document.user.workplace %></td>
      <td><%= document.doctype %></td>
      <td><%= document.subject %></td>
      <td><%= document.recipient %></td>
      <td><%= document.dispatch_number %></td>
      <td><%= link_to "Ver", document, :class => "note" %></td>
      <td><%= link_to "Editar", edit_document_path(document), :class => "note" %></td>
      <td><%= link_to "Destruir", document, :confirm => 'Você tem certeza?', :method => :delete, :class => "note" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Gerar número", new_document_path %></p>